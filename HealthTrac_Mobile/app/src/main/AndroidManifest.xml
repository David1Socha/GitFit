<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raik383h_group_6.healthtracmobile" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".view.AuthenticationActivity"
            android:label="@string/title_authentication_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.OAuthPromptActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.AuthenticationActivity"/>
        </activity>
        <activity
            android:name=".view.OAuthBrowserActivity"
            android:label="@string/title_activity_login_browser" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.OAuthPromptActivity" />
        </activity>
        <meta-data android:name="roboguice.modules"
            android:value="com.raik383h_group_6.healthtracmobile.module.ApplicationModule" />
    </application>

</manifest>
